include ../helpers/variables
include ../helpers/mixins

doctype html
html(lang="en")
head
  meta(charset="utf-8")
  meta(
    name="viewport"
    content="width=device-width, initial-scale=1, shrink-to-fit=no"
  )
  //- Bootstrap CSS
  link(
    rel="stylesheet" 
    href="/assets/css/platzi-overflow.css"
  )
  link(
    rel="stylesheet" 
    href="/assets/css/custom.css"
  )
  title PlatziOverflow - #{title}

body.bg-secondary
  header
    .container-fluid
      nav.navbar.navbar-expand-sm.navbar-light.bg-primary.row.align-items-center
        .container
          .col.m-2
            h1: a(href="/")
              img(src="/assets/images/logo.png" style="max-height: 60px;")
          .col.m-2.text-right
            a.btn.btn-primary.btn-lg.border.border-white(
              href="#"
              role="button" 
              aria-pressed="true"
            ) Login
            a.btn.btn-primary.btn-lg.border.border-white.ml-2(
              href="/signup"
              role="button" 
              aria-pressed="true"
            ) Signup

  block content
  block footer
  block scripts
    